---
import LinkButton from './LinkButton.astro';
import socialIcons from '@assets/socialIcons';

const URL = Astro.url;

const shareLinks = [
  {
    name: 'X',
    href: 'https://x.com/intent/post?url=',
    linkTitle: `Share this post on X`
  },
  {
    name: 'Mail',
    href: 'mailto:?subject=See%20this%20post&body=',
    linkTitle: `Share this post via email`
  },
  {
    name: 'Bluesky',
    href: 'https://bsky.app/intent/compose?text=',
    linkTitle: `Share this post on Bluesky`
  },
  {
    name: 'LinkedIn',
    href: `https://www.linkedin.com/sharing/share-offsite/?url=`,
    linkTitle: `Share this post on LinkedIn`
  }
] as const;
---

<div class={`social-icons`}>
  <span class="italic text-skin-accent">Liked it? Share this post on:</span>
  <div class="social-icons-list">
    {
      shareLinks.map(social => (
        <LinkButton
          href={`${social.href + URL}`}
          className="link-button"
          title={social.linkTitle}
        >
          <Fragment set:html={socialIcons[social.name]} />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      ))
    }
  </div>
</div>

<style>
  .social-icons {
    @apply flex flex-col flex-wrap items-center justify-center gap-2 sm:flex-row sm:items-center sm:justify-start;
  }
  .social-icons-list {
    @apply flex items-center gap-2 sm:gap-3;
  }
  .link-button {
    @apply scale-90 p-2 hover:rotate-6 sm:p-1;
  }
</style>
